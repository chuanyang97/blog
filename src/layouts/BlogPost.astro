---
import IndexLayout from "./IndexLayout.astro";
import IndexHeader from "../components/astro/index/IndexHeader.astro";
import '../styles/md-content.less'
---

<IndexLayout>
	<section>
		<header>
			<IndexHeader/>
		</header>
		<main id="chuanyang-markdown-container">
			<slot></slot>
		</main>
	</section>

</IndexLayout>

<style lang="less" scoped>
	section {
		width: 100%;
		height: 100%;
		flex-direction: column;
		display: flex;
		align-items: center;
		overflow: auto;
		
		&::-webkit-scrollbar {
			width: 0;
		}
		main {
		height: calc(100% - 64px);

	}
	}

	header {
		width: 100%;
		position: sticky;
		top: 0;
		backdrop-filter:20px;
        background-color: #000;
		box-shadow: 0 0  10px rgba(0,0,0,0.5);
		height: 64px;
	}



</style>