---
import IndexLayout from "./IndexLayout.astro";
import IndexHeader from "../components/astro/index/IndexHeader.astro";
---

<IndexLayout>
	<section>
		<header>
			<IndexHeader/>
		</header>
		<main>
			<slot></slot>
		</main>
	</section>

</IndexLayout>

<style lang="less" scoped>
	section {
		width:100vw;
		height: 100vh;
		overflow: auto;
		&::-webkit-scrollbar {
			width: 0;
		}
	}

	header {
		width: 100%;
		position: sticky;
		top: 0;
		backdrop-filter:20px;
        background-color: #000;
		box-shadow: 0 0  10px rgba(0,0,0,0.5);
	}

	main {
		width: 100%;
	}

</style>